<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WelcomeScreen"
    android:background="#b7a3ff"
    android:orientation="vertical">

    <TextView
        android:text="PEPPER\n          SHIELD"
        android:textColor="#990000"
        android:textSize="50sp"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usage History"
        android:textSize="20sp"
        android:textColor="#850001"
        android:padding="10sp"
        android:background="#FFEEEE"
        android:onClick="openUsageHistory"
        android:layout_below="@+id/textView"
        android:layout_marginTop="145dp"
        android:layout_alignLeft="@+id/buttonContacts"
        android:layout_alignStart="@+id/buttonContacts"
        android:layout_alignRight="@+id/buttonContacts"
        android:layout_alignEnd="@+id/buttonContacts" />

    <Button
        android:id="@+id/buttonContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        android:textSize="20sp"
        android:textColor="#850001"
        android:padding="10sp"
        android:background="#FFEEEE"
        android:onClick="openEmergencyContacts"
        android:layout_below="@+id/buttonHistory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/buttonStandby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Standby"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:textColor="#850001"
        android:padding="10sp"
        android:background="#FFEEEE"
        android:onClick="enableStandby"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/buttonHistory"
        android:layout_alignStart="@+id/buttonHistory"
        android:layout_alignRight="@+id/buttonHistory"
        android:layout_alignEnd="@+id/buttonHistory" />


</RelativeLayout>

